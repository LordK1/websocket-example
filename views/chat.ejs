<!-- views/chat.ejs -->
<!DOCTYPE html>
<html>
<head>
    <% include partials/header %>
    <script type="text/javascript">
        var user;
        <% if (user){ %>
        user = <%- JSON.stringify(user) %>;

        console.log(user.username);
        <% } %>

    </script>
    <script type="text/javascript" src="static/js/chat.js"></script>
</head>
<body class="container">
<header>
    <% include partials/navbar.ejs %>
</header>
<main>
    <div class="row">
        <div class="col-md-8">
            <div class="jumbotron">
                <p class="content">

                <h1 class="title">Chatter Socket.io</h1>

                <p class="content">
                    This is sample of WAMP - Web Application Messaging protocol, download client side android
                    application
                    from <a
                            href="https://github.com/LordK1/SocketChatApplication/blob/master/app/app-release.apk?raw=true">
                        here </a> and
                    fire up
                    chatting :") <br><br>
                </p>
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="well">
                <%if (user){%>
                       <h3> Hi, <%= user.username %> !</h3>
                <% } %>

                <h5>
                    <br>
                    Users List:
                    <ul id="user-list">

                    </ul>
                    Rooms list :
                    <div id="rooms-list">

                    </div>
                </h5>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-8">
                <h3>Conversion :</h3>
                <hr>
                <div id="conversation">

                </div>
            </div>
            <div class="col-md-4">
                <!--<form onsubmit="return chatSendNewMessage(this);">-->
                <form onsubmit="return false;">

                    <div class="message-input">
                        <textarea type="text" id="data" placeholder="Enter a Message" required=""
                                  value=""></textarea>
                    </div>
                    <input id="datasend" class="sendMessageButton" type="submit" name="submit" value="Send !">

                </form>
            </div>
        </div>
    </div>
</main>
<footer>
    <% include partials/footer.ejs %>
</footer>
</body>
</html>